# Build stage
FROM golang:1.25.3 AS build
WORKDIR /workspace
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=${TARGETARCH} go build -o provider ./cmd/provider

# Package stage
FROM gcr.io/distroless/static:nonroot
WORKDIR /

# Copy the provider binary
COPY --from=build /workspace/provider /usr/local/bin/provider

# Copy package metadata
COPY package /package

USER 65532:65532
ENTRYPOINT ["/usr/local/bin/provider"]
